{
    "name": "yulianovdey/flarum-post-subscriptions",
    "description": "Allows you to subscribe to a post.",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "0.1.0-beta.12"
    },
    "autoload": {
        "psr-4": {"PoweredByStuff\\FlarumPostSubscriptions\\": "src/"}
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "flarum-extension": {
            "title": "Post Subscriptions",
            "icon": {
                "name": "fas fa-star",
                "backgroundColor": "#ffea7b",
                "color": "#de8e00"
            }
        }
    }
}
